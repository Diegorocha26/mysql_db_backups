# Database Configuration
DB_USER= # DB user
DB_PASS= # DB password
DB_HOST= # DB host
DB_PORT= # DB port
DB_NAME= # DB name

# Google Drive Configuration
# Path to your service account JSON file
GOOGLE_SERVICE_ACCOUNT_FILE="/path/to/your/service-account-key.json"

# Optional: Google Drive folder ID where backups should be stored
# Leave empty to store in root of Drive
# To get folder ID: Open folder in Drive, the ID is in the URL after /folders/
GOOGLE_DRIVE_FOLDER_ID=""

# Backup Configuration
# Directory where local backups are temporarily stored
BACKUP_LOCAL_DIR="./backups"

# Maximum number of backups to keep (both local and on Google Drive)
MAX_BACKUPS_TO_KEEP="7"

# Number of days to retain backups (for future use)
BACKUP_RETENTION_DAYS="30"
